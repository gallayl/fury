{
  "name": "fury",
  "version": "1.0.0",
  "description": "example web app based on furystack",
  "main": "service/src/index.ts",
  "repository": "https://github.com/gallayl/fury.git",
  "author": "Gallay Lajos <gallay.lajos@gmail.com>",
  "license": "GPL-2.0-only",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend",
      "service"
    ],
    "nohoist": [
      "**/*"
    ]
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "*.d.ts"
    ]
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf service/dist frontend/dist **/tsconfig.tsbuildinfo tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .tsx,.ts --cache"
  }
}
