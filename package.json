{
  "name": "fury",
  "version": "1.0.0",
  "description": "example web app based on furystack",
  "main": "service/dist/index.js",
  "repository": "https://github.com/gallayl/fury.git",
  "author": "Gallay Lajos <gallay.lajos@gmail.com>",
  "license": "GPL2",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend",
      "service"
    ]
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.0",
    "rimraf": "^2.6.3",
    "tslib": "^1.9.3",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "*.d.ts"
    ]
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf service/dist frontend/dist **/tsconfig.tsbuildinfo tsconfig.tsbuildinfo",
    "lint": "eslint"
  }
}
